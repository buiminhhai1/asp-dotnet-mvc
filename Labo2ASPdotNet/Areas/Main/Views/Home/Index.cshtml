@{
    ViewData["Title"] = "Home Page";
}
@model Labo2ASPdotNet.Models.LoginModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Assets/Main/css/style.css">
</head>

<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab"><a href="/Register">Sign Up</a></li>
            <li class="tab active"><a href="/">Log In</a></li>
        </ul>

        <div>
            <div id="login">
                <h1>Welcome Back!</h1>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger", @style = "color: white; background: red"})
                    <div class="field-wrap">
                        <label>
                            Username<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Username)
                    </div>
                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Password, new { type = "password" })
                    </div>
                    <p class="forgot"><a href="#">Forgot Password?</a></p>
                    <button class="button button-block" type="submit">Log In</button>
                }
            </div>
        </div><!-- tab-content -->
    </div> <!-- /form -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Assets/Main/js/index.js"></script>

</body>

</html>
