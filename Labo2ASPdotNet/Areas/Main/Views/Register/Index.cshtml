@{
    ViewData["Title"] = "Register";
}
@model Labo2ASPdotNet.Models.RegisterModel;
 
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Assets/Main/css/style.css">
</head>

<body>
    <div class="form">
        <ul class="tab-group">
            <li class="tab active" onclick="handleSelectTab"><a href="/Register">Sign Up</a></li>
            <li class="tab" onclick="handleSelectTab"><a href="/">Log In</a></li>
        </ul>
        <div class="tab-content">
            <div id="signup">
                <h1>Sign Up for Free</h1>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger u-list-style" })
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                First Name<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.FirstName, new { })
                        </div>

                        <div class="field-wrap">
                            <label>
                                Last Name<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.LastName, new { } )
                        </div>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Email, new  { })
                    </div>
                    <div class="field-wrap">
                        <label>
                            Username<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Username, new { })
                    </div>

                    <div class="field-wrap">
                        <label>
                            Set A Password<span class="req">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Password, new { type = "password" })
                    </div>

                    <button type="submit" class="button button-block">Get Started</button>
                }

            </div>        <div></div>
        </div><!-- tab-content -->
    </div> <!-- /form -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Assets/Main/js/index.js"></script>
</body>

</html>
