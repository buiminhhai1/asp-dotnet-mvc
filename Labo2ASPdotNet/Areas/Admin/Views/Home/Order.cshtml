@{
    ViewData["Title"] = "Order Management";
}
<partial name="~/Areas/Admin/Views/Shared/AdminNavigationBar.cshtml" />

<script type="text/javascript" src="~/Handlers/Admin/OrderHandler.js"></script>
<div id="page-wrapper">
    <h2 style="margin-bottom: 30px;">Orders Management</h2>
    
    <div id="admin-orders-spinner" class="loader">Loading...</div>

    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-orderList">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Order by</th>
                <th>Product Id</th>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Totals</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="datatable-order-tbody">
        </tbody>
    </table>

    <!-- Pagination-->
    <nav aria-label="pagination-section" id="order-pagination-wrapper">
        <ul class="pagination" id="orders-pagination"></ul>
    </nav>

    <!-- Update productd modal -->
    <div class="modal fade" id="update-order-modal" tabindex="-1" role="dialog" aria-labelledby="update-products-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateProductModalTitle">Update Status Order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -22px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="idOrder">Id</label>
                        <input type="text" class="form-control" id="idOrder" readonly disabled>
                    </div>
                    <div class="form-group">
                        <label for="statusOrder">Status Order</label>
                        <select class="form-control" id="statusOrder">
                            <option value="Pending">Pending</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="updateButtonModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="handleUpdateStatusOrder()">
                        <span id="update-spinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        <span>Save</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>