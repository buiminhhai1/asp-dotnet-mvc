@{
    ViewBag.Title = "Admin Home Page";
}
@model Labo2ASPdotNet.Models.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Flat HTML5/CSS3 Login Form</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/style.css">

</head>

<body>

    <div class="login-page">
        <div class="form">
            <form class="register-form">
                <input type="text" placeholder="name" />
                <input type="password" placeholder="password" />
                <input type="text" placeholder="email address" />
                <button>create</button>
                <p class="message">Already registered? <a href="#">Sign In</a></p>
            </form>
            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger u-list-style" })

                @Html.TextBoxFor(m => m.Username, new { placeholder = "username" })
                @Html.TextBoxFor(m => m.Password, new { placeholder = "password", type = "password" })
                <button type="submit">login</button>
            <p class="message">Not registered? <a href="#">Create an account</a></p>
            }

        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>



    <script src="~/Assets/Admin/js/index.js"></script>




</body>

</html>
