@{
    ViewBag.Title = "Admin Home Page";
}
@model Labo2ASPdotNet.Models.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Hang Pham Shop</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/style.css">
    <link href="~/Assets/Admin/css/cssSpinner.css" rel="stylesheet" />


</head>

<body>
    <h2 style="text-align: center">Welcome back to admin's pages</h2>
    <div class="alert alert-danger" id="admin-login-issue" role="alert">Invalid Username or password, please try again</div>
    <div class="login-page">
        <div class="form">
            <input type="text" id="admin-username-login" placeholder="username" />
            <input type="password" id="admin-password-login" placeholder="password" />

            <button type="submit" id="admin-login-btn" onclick="handleLogin()">login</button>
            <p class="message">Not registered? <a href="/Admin/Register">Create an account</a></p>

        </div>
        <div id="admin-login-spinner" class="loader">Loading...</div>
    </div>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Assets/Admin/js/index.js"></script>
    <script src="~/Handlers/Admin/LoginHandler.js"></script>
</body>

</html>
