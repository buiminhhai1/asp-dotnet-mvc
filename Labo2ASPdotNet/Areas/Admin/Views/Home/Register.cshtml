@{
    ViewBag.Title = "Admin Register Page";
}
@model Labo2ASPdotNet.Models.RegisterModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Flat HTML5/CSS3 Login Form</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Admin/css/style.css">

</head>

<body>
    <h2 style="text-align: center">Welcome to Register admin's pages</h2>
    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger u-list-style" })

                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "firstname" })
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "lastname" })
                @Html.TextBoxFor(m => m.Email, new { placeholder = "email" })
                @Html.TextBoxFor(m => m.Username, new { placeholder = "username" })
                @Html.TextBoxFor(m => m.Password, new { placeholder = "password", type = "password" })
                <button type="submit">create</button>
                <p class="message">Already registered? <a href="/Admin">Sign In</a></p>
            }
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>



    <script src="~/Assets/Admin/js/index.js"></script>




</body>

</html>
