@{
    ViewData["Title"] = "Products Management";
}
<partial name="~/Areas/Admin/Views/Shared/AdminNavigationBar.cshtml" />

<script type="text/javascript" src="~/Handlers/Admin/CategoryHandler.js"></script>
<div id="page-wrapper">
    <h2 style="margin-bottom: 30px;">Categories Management</h2>


    <div class="row" style="flex-direction:row-reverse; margin: 30px 20px 30px 20px;">
        <button class="btn btn-success" data-toggle="modal" data-target="#create-categories-modal">Add New Category</button>
    </div>
    <!-- Create Categori Modal -->
    <div class="modal fade" id="create-categories-modal" tabindex="-1" role="dialog" aria-labelledby="create-categories-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create new category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -22px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nameCategoryCreate">Name</label>
                        <input type="text" class="form-control" id="nameCategoryCreate" placeholder="Name of category">
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="createButtonModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="handleCreateCategory()">
                        <span id="create-spinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        <span>Create</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div id="admin-categories-spinner" class="loader">Loading...</div>

    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-categoriesList">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="datatable-category-tbody">
        </tbody>
    </table>

   
    <!-- Update productd modal -->
    <div class="modal fade" id="update-category-modal" tabindex="-1" role="dialog" aria-labelledby="update-category-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateCategoryModalTitle">Update category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -22px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nameCategoryUpdate">Name</label>
                        <input type="text" class="form-control" id="nameCategoryUpdate" placeholder="Name of Category">
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="updateButtonModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="handleUpdateCategory()">
                        <span id="update-spinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        <span>Save</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete productd modal -->
    <div class="modal fade" id="delete-category-modal" tabindex="-1" role="dialog" aria-labelledby="delete-category-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteCategoryModalTitle">Delete category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -22px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure to delete this category???
                </div>
                <div class="modal-footer">
                    <button id="deleteButtonModal" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="handleDeleteCategory()">
                        <span id="delete-spinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        <span>Delete</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>